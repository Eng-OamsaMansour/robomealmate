<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro"/>

  <material name="Blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="Black">
    <color rgba="0 0 0 1"/>
  </material>




  <link name="base">
    <visual>
      <origin xyz="0.15 0.0 0.075"/>
      <geometry>
        <box size="0.30 0.60 0.15"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0.15 0.0 0.075"/>
      <geometry>
        <box size="0.30 0.60 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box  mass="5.0" x="0.30" y="0.60" z="0.15">
      <origin xyz="0.15 0.0 0.075" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_box> 
  </link>

  <!--front left wheel-->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.25 0.32 0.0" rpy="-${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.035"/> 
      </geometry>
    </collision>
    <xacro:inertial_cylinder  mass="0.10" radius="0.035" length="0.04">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_cylinder> 
    </link>

    <!--front right wheel-->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.25 -0.32 0.0" rpy=" ${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 -1.0"/>
  </joint>

  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.035"/> 
      </geometry>
    </collision>
    <xacro:inertial_cylinder  mass="0.10" radius="0.035" length="0.04">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_cylinder> 
  </link>
  <!--back left wheel-->
  <joint name="back_left_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="back_left_wheel"/>
    <origin xyz="0.05 0.32 0.0" rpy="-${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <link name="back_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.035"/> 
      </geometry>
    </collision>
    <xacro:inertial_cylinder  mass="0.10" radius="0.035" length="0.04">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_cylinder> 
  </link>

  <!--back right wheel-->
  <joint name="back_right_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="back_right_wheel"/>
    <origin xyz="0.05 -0.32 0.0" rpy=" ${pi/2} 0.0 0.0"/>
    <axis xyz="0.0 0.0 -1.0"/>
  </joint>

  <link name="back_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.035"/> 
      </geometry>
    </collision>
    <xacro:inertial_cylinder  mass="0.10" radius="0.035" length="0.04">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_cylinder> 
  </link>
  <!--Left Feet-->
  <joint name="left_feet_joint" type="fixed">
    <parent link="base"/>
    <child link="left_feet"/>
    <origin xyz="0.15 0.15 0.34"/>
    <axis xyz="0.0 0.0 0.0"/>
  </joint>

  <link name="left_feet">
    <visual>
    <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.15 0.15 0.38"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.15 0.38"/>
      </geometry>
    </collision>
    <xacro:inertial_box  mass="1.0" x="0.15" y="0.15" z="0.38">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_box> 
  </link>




  <!--Right Feet-->
  <joint name="right_feet_joint" type="fixed">
    <parent link="base"/>
    <child link="right_feet"/>
    <origin xyz="0.15 -0.15 0.34"/>
    <axis xyz="0.0 0.0 0.0"/>
  </joint>

  <link name="right_feet">
    <visual>
    <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.15 0.15 0.38"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.15 0.38"/>
      </geometry>
    </collision>
    <xacro:inertial_box  mass="1.0" x="0.15" y="0.15" z="0.38">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_box> 
  </link>
  <!-- Body -->
  <joint name="body_joint" type="fixed">
    <parent link="base"/>
    <child link="body"/>
    <origin xyz="0.15 0.0 0.73"/>
    <axis xyz="0.0 0.0 0.0"/>    
  </joint>

  <link name="body">
    <visual>
      <geometry>
        <box size="0.15 0.45 0.40"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.20 0.40"/>
      </geometry>
    </collision>
    <xacro:inertial_box  mass="0.3" x="0.15" y="0.45" z="0.40">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_box> 
  </link>

  <!--head-->
  <joint name="head_joint" type="fixed">
    <parent link="base"/>
    <child link="head"/>
    <origin xyz="0.15 0.0 1.08"/>
    <axis xyz="0.0 0.0 0.0"/>
  </joint>
  <link name="head">
    <visual>
      <geometry>
        <box size="0.15 0.30 0.30"/>
      </geometry>
      <material name="Black"/>                
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.30 0.30"/>
      </geometry>
    </collision>
    <xacro:inertial_box  mass="0.3" x="0.15" y="0.30" z="0.40">
      <origin xyz="0.0 0.0 0.0" rpy= "0.0 0.0 0.0"/>
    </xacro:inertial_box> 
  </link>
  <gazebo reference="base">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material> 
  </gazebo>
  <gazebo reference="back_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="back_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="left_feet">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="right_feet">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="body">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="head">
    <material>Gazebo/Black</material>
  </gazebo>


</robot>
